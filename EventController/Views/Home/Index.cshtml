@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Your Wedding, Your Way – Event Management</title>

    <!-- Bootstrap CSS 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons (tuỳ chọn) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        /* Tuỳ biến nhanh */
        .hero-title {
        font-weight: 600;
        font-size: 2rem;
        }

        .category-icon {
        width: 72px;
        height: 72px;
        object-fit: cover;
        border-radius: 8px;
        background: #f1f1f1;
        }

        .section-heading {
        font-weight: 600;
        font-size: 1.25rem;
        margin-bottom: .75rem;
        }

        .cta-banner {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 2rem;
        }

        .vendor-card,
        .media-card {
        background: #fafafa;
        border: 1px solid #e5e5e5;
        border-radius: 6px;
        min-height: 120px;
        }

        .review-box {
        background: #f8f9fa;
        border-radius: 6px;
        padding: 1.5rem;
        }

        .review-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        object-fit: cover;
        }
    </style>
</head>
<body>

    <!-- ========== HERO & SEARCH ========== -->
    <section class="py-5 text-center">
        <div class="container">
            <h1 class="hero-title mb-4">Your Wedding, Your Way</h1>

            <form class="row gy-2 gx-3 justify-content-center"
                  asp-action="EventList" asp-controller="Event" method="get">
                <div class="col-md-3">
                    <select class="form-select" name="categoryId">
                        <option value="">All categories</option>
                        @foreach (var c in ViewBag.listCategory)
                        {
                            <option value="@c.CategoryID">@c.CategoryName</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <input type="date" name="startDate" class="form-control" />
                </div>
                <div class="col-md-3">
                    <select class="form-select" name="venueId">
                        <option value="">All venues</option>
                        @foreach (var v in ViewBag.listVenue)
                        {
                            <option value="@v.VenueID">@v.Name</option>
                        }
                    </select>
                </div>

                <div class="col-md-2 d-grid">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>

        </div>
    </section>

    <!-- ========== BROWSE BY CATEGORY ========== -->
    <section class="pb-5">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="section-heading">Browse by Category</h2>
                <a class="small text-decoration-none">See all</a>
            </div>

            <div class="row g-3">
                @foreach (var item in ((IEnumerable<dynamic>)ViewBag.listCategory).Take(6))
                {
                    <div class="col-6 col-md-4 col-lg-2">
                        <div class="card text-center border-0 shadow-sm h-100">
                            <div class="card-body d-flex align-items-center justify-content-center p-3">
                                <a asp-action="EventList" asp-controller="Event" asp-route-categoryId="@item.CategoryID"><p class="mb-0 fw-semibold">@item.CategoryName</p></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>


    <!-- ========== POPULAR VENUES ========== -->
    <section class="pb-5 bg-light">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="section-heading">Popular Venues</h2>
                <a href="#" class="small text-decoration-none">See all</a>
            </div>
            
             <div class="row g-4">
                 @foreach (var item in ViewBag.listVenue)
            {
               
                    <div class="col-6 col-md-3">
                        <div class="card">
                            <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="">
                            <div class="card-body p-2">
                                <a asp-action="EventList" asp-controller="Event" asp-route-venueId="@item.VenueID"><h6 class="card-title mb-0 small text-center">@item.Name</h6></a>
                            </div>
                        </div>
                    </div>
               
            } 
            </div>
             
        </div>
    </section>

    <!-- ========== CTA BANNER ========== -->
    <section class="py-5">
        <div class="container">
            <div class="cta-banner d-flex flex-column flex-md-row align-items-center gap-4">
                <img src="https://via.placeholder.com/150" class="flex-shrink-0" alt="">
                <div class="flex-grow-1">
                    <h4>Lorem ipsum dolor sit amet</h4>
                    <p class="mb-3">Consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore.</p>
                    <a href="#" class="btn btn-primary">Book Now</a>
                </div>
            </div>
        </div>
    </section>

    <!-- ========== FEATURED EVENT ========== -->
    <div class="container my-5">
        <h4 class="mb-4">🔥 Upcoming Events</h4>

        <div id="multiEventCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @{
                    var events = ViewBag.listEvent as List<Event>;
                    int eventsPerSlide = 4;
                    int totalSlides = (int)Math.Ceiling((double)events.Count / eventsPerSlide);
                    for (int slideIndex = 0; slideIndex < totalSlides; slideIndex++)
                    {
                        var chunk = events.Skip(slideIndex * eventsPerSlide).Take(eventsPerSlide).ToList();
                    
                    <div class="carousel-item @(slideIndex == 0 ? "active" : "")">
                        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-4 g-3">
                            @foreach (var item in chunk)
                            {
                                <div class="col">
                                    <div class="card shadow-sm h-100">
                                        <img src="@item.ImageUrl ?? " https: //via.placeholder.com/300x150"" class="card-img-top event-img" alt="event image">
                                            <div class="card-body d-flex flex-column">
                                                <h6 class="card-title fw-bold">@item.Title</h6>
                                                <p class="card-text small text-muted mb-2">
                                                    <i class="bi bi-calendar-event"></i> @item.StartTime.ToString("dd MMM yyyy") <br />
                                                    <i class="bi bi-geo-alt"></i> @item.Venue.Name
                                                </p>
                                                <div class="d-flex justify-content-between mt-auto">
                                                    <form asp-controller="Registration" asp-action="Register" method="post">
                                                        <input type="hidden" name="eventId" value="@item.EventID" />
                                                        <button type="submit" class="btn btn-success btn-sm">Register</button>
                                                    </form>
                                                    <a asp-controller="Event" asp-action="Index" asp-route-id="@item.EventID" class="btn btn-outline-primary btn-sm">View Details</a>
                                                </div>
                                            </div>

                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    }
                }
            </div>

            <!-- Controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#multiEventCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#multiEventCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>



    <!-- ========== REVIEWS ========== -->
    <section class="pb-5 bg-light">
        <div class="container">
            <h2 class="section-heading text-center mb-4">Reviews</h2>

            <div class="row g-4 justify-content-center">
                <div class="col-md-5">
                    <div class="review-box">
                        <div class="d-flex align-items-center mb-2">
                            <img src="https://via.placeholder.com/48" class="review-avatar me-2" alt="">
                            <strong>Nguyễn An</strong>
                        </div>
                        <p class="mb-0 fst-italic">“Dịch vụ tuyệt vời! Sự kiện của chúng tôi diễn ra hoàn hảo.”</p>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="review-box">
                        <div class="d-flex align-items-center mb-2">
                            <img src="https://via.placeholder.com/48" class="review-avatar me-2" alt="">
                            <strong>Trần Linh</strong>
                        </div>
                        <p class="mb-0 fst-italic">“Giao diện dễ dùng, tìm nhà cung cấp rất nhanh chóng.”</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @if (TempData["Success"] != null)
    {
        <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-success">
                    <div class="modal-header bg-success text-white">
                        <h5 class="modal-title" id="successModalLabel"><i class="bi bi-check-circle-fill"></i> Success</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body text-center">
                        @TempData["Success"]
                    </div>
                    <div class="modal-footer justify-content-center">
                        <button type="button" class="btn btn-success px-4" data-bs-dismiss="modal">OK</button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            const modal = new bootstrap.Modal(document.getElementById('successModal'));
            modal.show();
        </script>
    }
    @if (TempData["Error"] != null)
    {
        <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-warning">
                    <div class="modal-header bg-warning text-white">
                        <h5 class="modal-title" id="errorModalLabel"><i class="bi bi-check-circle-fill"></i> Error</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body text-center">
                        @TempData["Error"]
                    </div>
                    <div class="modal-footer justify-content-center">
                        <button type="button" class="btn btn-success px-4" data-bs-dismiss="modal">OK</button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            const modal = new bootstrap.Modal(document.getElementById('errorModal'));
            modal.show();
        </script>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
