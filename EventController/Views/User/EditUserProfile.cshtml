@model EventController.Models.ViewModels.EditUserViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "User Profile";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        .avatar-lg {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
        }

        .profile-card {
            border: 1px solid #e3e3e3;
            border-radius: 8px;
        }

        .form-section {
            background: #f8f9fa;
            padding: 2rem;
            border-radius: 8px;
        }

        .nav-pills .nav-link.active {
            background-color: #0d6efd;
        }

        .event-mini {
            border-bottom: 1px solid #eee;
            padding: .75rem 0;
        }
    </style>
</head>
<body>
    <div class="container py-5" style="max-width: 900px;">
        <div class="card profile-card shadow-sm">
            <div class="card-body p-4">

                <form asp-action="EditUserProfile" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="UserID" />

                    <div class="d-flex align-items-center gap-4">
                        <img src="@(string.IsNullOrEmpty(Model.ProfileImage) ? "https://via.placeholder.com/120" : Model.ProfileImage)" class="avatar-lg" alt="User Avatar" />
                        <div class="flex-grow-1">
                            <h4 class="mb-1 fw-bold">@Model.FullName</h4>
                            <span class="badge bg-primary">Participant</span>
                            <p class="small text-muted mb-0">Member since: 12 Jan 2024</p>
                        </div>
                        <div>
                            <label asp-for="ProfileImage" class="form-label">Change Photo</label>
                            <input asp-for="ProfileImageFile" type="file" class="form-control form-control-sm" />
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="FullName" class="form-label">Full Name</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Phone" class="form-label">Phone</label>
                            <input asp-for="Phone" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Gender" class="form-label">Gender</label>
                            <select asp-for="Gender" class="form-select">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="DoB" class="form-label">Date of Birth</label>
                            <input asp-for="DoB" type="date" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Address" class="form-label">Address</label>
                            <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                        </div>
                    </div>

                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                    </div>
                </form>

                <!-- TAB SECTION -->
                <ul class="nav nav-pills mt-5" id="profileTabs" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#events" type="button">My Events</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" data-bs-toggle="pill" data-bs-target="#registrations" type="button">Registrations</button>
                    </li>
                </ul>

                <div class="tab-content mt-3">
                    <div class="tab-pane fade show active" id="events">
                        <div class="event-mini d-flex justify-content-between align-items-center">
                            <div>
                                <strong>AI Conference 2025</strong><br />
                                <small class="text-muted">01 Sep 2025 — Grand Hall, HCMC</small>
                            </div>
                            <a href="#" class="btn btn-sm btn-outline-secondary">Manage</a>
                        </div>

                        <div class="event-mini d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Startup Pitch Day</strong><br />
                                <small class="text-muted">15 Oct 2025 — Hanoi</small>
                            </div>
                            <a href="#" class="btn btn-sm btn-outline-secondary">Manage</a>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="registrations">
                        <div class="event-mini d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Design Thinking Workshop</strong><br />
                                <small class="text-muted">25 Aug 2025 — Da Nang</small>
                            </div>
                            <span class="badge bg-success">Registered</span>
                        </div>

                        <div class="event-mini d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Acoustic Night Live</strong><br />
                                <small class="text-muted">10 Sep 2025 — HCMC</small>
                            </div>
                            <span class="badge bg-success">Registered</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
