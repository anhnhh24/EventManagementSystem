

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .table th,
    .table td {
        vertical-align: middle;
    }

    .form-select,
    .form-control {
        min-width: 150px;
    }

    .input-group-text {
        background: transparent;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.4em 0.75em;
        border-radius: 2rem;
    }

    .card-table .table tbody tr {
        transition: background 0.2s;
    }

        .card-table .table tbody tr:hover {
            background-color: #f8f9fa;
        }

    .btn-sm {
        padding: 0.35rem 0.5rem;
    }

    .avatar {
        width: 36px;
        height: 36px;
        object-fit: cover;
        border-radius: 50%;
    }
</style>

<div class="container-fluid py-5 bg-light min-vh-100">
    <!-- Filters + Actions -->

    <!-- User Table -->
    <div class="card shadow-sm card-table border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>UserID</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Username</th>
                        <th>Status</th>
                        <th>Role</th>
                        <th>Joined</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in ViewBag.listUser)
                    {
                        <tr>
                            <td>@user.UserID</td>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <img src="@(!string.IsNullOrEmpty(user.ProfileImage) ? Url.Content("~/" + user.ProfileImage) :  Url.Content("~/img/events/unknown.png"))"
                                         alt="avatar" class="avatar" />
                                    <span>@user.FullName</span>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>@user.FullName</td>
                            <td>
                                <span class="badge @(user.Status == "Active" ? "bg-success" : user.Status == "Inactive" ? "bg-secondary" : "bg-danger")">
                                    @user.Status
                                </span>
                            </td>
                            <td>@user.Role?.RoleName</td>
                            <td>@user.DateJoined.ToString("MMM dd, yyyy")</td>
                            @* <td>@user.DateJoined.ToString("HH:mm tt")</td> *@
                            @* <td class="text-end"> *@
                            @*     <button class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-fill"></i></button> *@
                            @*     <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash-fill"></i></button> *@
                            @* </td> *@
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
