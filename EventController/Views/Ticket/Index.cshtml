@using EventController.Models.ViewModels
@using EventController.Util
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var currentUser = Context.Session.GetObject<UserViewModel>("currentUser");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>My Tickets</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        .ticket-card {
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }

        .ticket-card:hover {
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }

        .ticket-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1.5rem;
            border-radius: 10px 10px 0 0;
        }

        .ticket-code {
            font-family: 'Courier New', monospace;
            font-size: 1.1rem;
            font-weight: bold;
            letter-spacing: 2px;
            padding: 0.5rem 1rem;
            background: white;
            color: #667eea;
            border-radius: 8px;
            display: inline-block;
            margin-top: 0.5rem;
        }

        .status-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 600;
        }

        .status-unused {
            background: #10b981;
            color: white;
        }

        .status-used {
            background: #6b7280;
            color: white;
        }

        .status-cancelled {
            background: #ef4444;
            color: white;
        }

        .event-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }

        .qr-placeholder {
            width: 120px;
            height: 120px;
            background: #f3f4f6;
            border: 2px dashed #d1d5db;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="fw-bold"><i class="bi bi-ticket-perforated-fill text-primary"></i> My Tickets</h2>
                <p class="text-muted">Total: @ViewBag.TotalTickets ticket(s)</p>
            </div>
        </div>

        @if (ViewBag.GroupedTickets != null && ViewBag.GroupedTickets.Count > 0)
        {
            foreach (var group in ViewBag.GroupedTickets)
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <div class="row">
                            <!-- Event Image -->
                            <div class="col-md-3">
                                <img src="@(group.Event.ImageUrl != null ? Url.Content("~/" + group.Event.ImageUrl) : Url.Content("~/img/events/Unknown.png"))"
                                     class="event-image" alt="@group.Event.Title" />
                            </div>

                            <!-- Event Info -->
                            <div class="col-md-9">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h4 class="fw-bold mb-0">@group.Event.Title</h4>
                                    @{
                                        var statusClass = group.Event.Status == "Active" ? "success" : 
                                                         group.Event.Status == "Cancelled" ? "danger" : 
                                                         group.Event.Status == "Expired" ? "secondary" : "primary";
                                    }
                                    <span class="badge bg-@statusClass">@group.Event.Status</span>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <p class="mb-2"><i class="bi bi-calendar-event text-primary"></i> <strong>Start:</strong> @group.Event.StartTime.ToString("MMM dd, yyyy HH:mm")</p>
                                        <p class="mb-2"><i class="bi bi-calendar-x text-danger"></i> <strong>End:</strong> @group.Event.EndTime.ToString("MMM dd, yyyy HH:mm")</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="mb-2"><i class="bi bi-geo-alt-fill text-danger"></i> @group.Event.Venue.Name</p>
                                        <p class="mb-2">
                                            <i class="bi bi-ticket-fill text-success"></i> <strong>@group.TotalTickets</strong> ticket(s) - 
                                            <span class="text-success">@group.UnusedTickets Unused</span>, 
                                            <span class="text-muted">@group.UsedTickets Used</span>
                                            @if (group.CancelledTickets > 0)
                                            {
                                                <span>, <span class="text-danger">@group.CancelledTickets Cancelled</span></span>
                                            }
                                        </p>
                                    </div>
                                </div>

                                <!-- Tickets List -->
                                <div class="row g-3">
                                    @foreach (var ticket in group.Tickets)
                                    {
                                        <div class="col-md-6">
                                            <div class="ticket-card p-3">
                                                <span class="status-badge status-@ticket.Status.ToLower()">@ticket.Status</span>
                                                
                                                <div class="d-flex align-items-center gap-3">
                                                    <!-- QR Code Placeholder -->
                                                    <div class="qr-placeholder">
                                                        <i class="bi bi-qr-code" style="font-size: 3rem; color: #9ca3af;"></i>
                                                    </div>

                                                    <!-- Ticket Details -->
                                                    <div class="flex-grow-1">
                                                        <div class="ticket-code">@ticket.UniqueCode</div>
                                                        <p class="small text-muted mb-1 mt-2">
                                                            <i class="bi bi-calendar-check"></i> Purchased: @ticket.PurchaseDate.ToString("MMM dd, yyyy")
                                                        </p>
                                                        <p class="small text-muted mb-0">
                                                            <i class="bi bi-hash"></i> Ticket #@ticket.TicketID
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info text-center py-5">
                <i class="bi bi-ticket" style="font-size: 4rem; opacity: 0.3;"></i>
                <h4 class="mt-3">No Tickets Yet</h4>
                <p class="text-muted">You haven't purchased any tickets. Browse events and register to get started!</p>
                <a href="/Event/EventList" class="btn btn-primary mt-3">
                    <i class="bi bi-search"></i> Browse Events
                </a>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
