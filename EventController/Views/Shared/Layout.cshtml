@using EventController.Models.ViewModels
@using EventController.Util
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var user = Context.Session.GetObject<UserViewModel>("currentUser") ?? new UserViewModel();
    bool isAdmin = user != null && !string.IsNullOrEmpty(user.Email) && user.RoleID == 1;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Event Management</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap JS (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">


    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    @if (!isAdmin)
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">Event Management</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link active" asp-controller="Home" asp-action="Index">Home</a></li>
                        @if (user.RoleID == 2)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Event" asp-action="EventOrganizer">Manage Events</a></li>
                        }
                        @if (user.RoleID == 3)
                        {
                            <li><a class="nav-link active" asp-controller="Registration" asp-action="Index">Cart</a></li>
                            <li><a class="nav-link active" asp-controller="Ticket" asp-action="Index">My Tickets</a></li>
                            <li><a class ="nav-link active" asp-controller="Bill" asp-action="Index">Bill</a></li>
                        }
                    </ul>

                    @if (!string.IsNullOrEmpty(user.Email))
                    {
                        <div class="d-flex align-items-center gap-3">
                            <span class="fw-semibold text-dark">Welcome, @user.FullName!</span>
                            <div class="dropdown">
                                <a class="d-flex align-items-center text-decoration-none dropdown-toggle"
                                href="#" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="@(user.ProfileImage != null ? Url.Content("~/" + user.ProfileImage) : Url.Content("~/img/events/Unknown.png"))"
                                    alt="avatar" class="rounded-circle" style="width: 36px; height: 36px; object-fit: cover;" />
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="dropdownUser">
                                    <li class="px-3 py-2">
                                        <span class="fw-semibold d-block">@user.FullName</span>
                                        <small class="text-muted">@user.Email</small>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="EditUserProfile">Profile</a></li>
                                    <li><a class="dropdown-item" asp-controller="Authentication" asp-action="ChangePassword">Change Password</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-controller="Authentication" asp-action="LogOut" method="post" class="px-3">
                                            <button type="submit" class="btn btn-link dropdown-item">Log out</button>
                                        </form>
                                    </li>
                                </ul>
                        </div>
                    </div>
                        <!-- Notification Dropdown -->
                        <div class="dropdown">
                            <a class="btn position-relative text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-bell fs-5"></i> <!-- Bootstrap Icons -->
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    @ViewBag.UnreadCount
                                    <span class="visually-hidden">unread notifications</span>
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow p-0" style="width: 300px;">
                                <li class="px-3 py-2 border-bottom">
                                    <strong>Notifications</strong>
                                </li>
                                @if (ViewBag.listNotification != null && ViewBag.listNotification.Count > 0)
                                {
                                    foreach (var notify in ViewBag.listNotification)
                                    {
                                        <li>
                                            <a class="dropdown-item small text-wrap">
                                                <div class="d-flex">
                                                    <div class="me-2">
                                                        <i class="bi bi-info-circle text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-semibold">Event Reminder</div>
                                                        <div class="text-muted small">@notify.Message</div>
                                                    </div>
                                                </div>
                                            </a>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li><span class="dropdown-item text-muted small">No new notifications</span></li>
                                }
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item text-center small" asp-controller="Notification" asp-action="Index">View All</a></li>
                            </ul>
                        </div>

                }
                else
                {
                    <div class="d-flex gap-2">
                        <a asp-controller="Authentication" asp-action="SignIn" class="btn btn-outline-secondary btn-sm">Login</a>
                        <a asp-controller="Authentication" asp-action="SignUp" class="btn btn-primary btn-sm">Sign up</a>
                    </div>
                }
            </div>
        </div>
    </nav>
        <main class="container mt-4">
            @RenderBody()
        </main>
    }
    else
    {
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <aside class="col-md-3 col-lg-2 bg-light border-end p-3 vh-100 sticky-top">
                    <h5 class="fw-bold mb-4">Admin Panel</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a asp-controller="Admin" asp-action="Index" class="nav-link text-dark">
                                <i class="bi bi-house-door me-2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a asp-controller="Admin" asp-action="EventAdmin" class="nav-link text-dark">
                                <i class="bi bi-calendar-event me-2"></i> Events
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a asp-controller="Admin" asp-action="UserAdmin" class="nav-link text-dark">
                                <i class="bi bi-people-fill me-2"></i> Users
                            </a>
                        </li>
                    </ul>
                    <hr />
                    <form asp-controller="Authentication" asp-action="LogOut" method="post" class="px-3">
                        <button type="submit" class="btn btn-link dropdown-item">Log out</button>
                    </form>
                </aside>

                <!-- Main Section -->
                <main class="col-md-9 col-lg-10 p-4">
                    @RenderBody()
                </main>
            </div>
        </div>
    }

    <!-- ✅ Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <!-- About Section -->
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold mb-3">Event Management System</h5>
                    <p class="small text-white-50">
                        Your trusted platform for discovering, organizing, and managing events. 
                        Create memorable experiences with ease.
                    </p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Index" class="text-white-50 text-decoration-none">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Event" asp-action="EventList" class="text-white-50 text-decoration-none">
                                <i class="bi bi-calendar-event me-1"></i> Browse Events
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-white-50 text-decoration-none">
                                <i class="bi bi-info-circle me-1"></i> About Us
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Admin Contact -->
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold mb-3">Contact Admin</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-envelope-fill me-2 text-primary"></i>
                            <a href="mailto:admin@eventmanagement.com" class="text-white-50 text-decoration-none">
                                admin@eventmanagement.com
                            </a>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone-fill me-2 text-success"></i>
                            <a href="tel:+1234567890" class="text-white-50 text-decoration-none">
                                +1 (234) 567-890
                            </a>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-geo-alt-fill me-2 text-danger"></i>
                            <span class="text-white-50">123 Event Street, City, Country</span>
                        </li>
                    </ul>
                </div>
            </div>

            <hr class="border-secondary my-3" />

            <!-- Social Media & Copyright -->
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-2 mb-md-0">
                    <span class="text-white-50 small">
                        © 2025 Event Management System. All rights reserved.
                    </span>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="#" class="text-white-50 me-3" title="Facebook">
                        <i class="bi bi-facebook fs-5"></i>
                    </a>
                    <a href="#" class="text-white-50 me-3" title="Twitter">
                        <i class="bi bi-twitter fs-5"></i>
                    </a>
                    <a href="#" class="text-white-50 me-3" title="Instagram">
                        <i class="bi bi-instagram fs-5"></i>
                    </a>
                    <a href="#" class="text-white-50" title="LinkedIn">
                        <i class="bi bi-linkedin fs-5"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/signalr/signalr.min.js"></script>
    
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const el = document.getElementById("userMenu");
            if (el) {
                new bootstrap.Dropdown(el);
            }
        });
        
        // Global SignalR connection for notifications
        @if (!string.IsNullOrEmpty(user.Email))
        {
            <text>
            // Initialize NotificationHub connection after DOM is ready
            document.addEventListener('DOMContentLoaded', function() {
                const notificationConnection = new signalR.HubConnectionBuilder()
                    .withUrl("/notificationHub")
                    .configureLogging(signalR.LogLevel.Information)
                    .build();

                notificationConnection.on("ReceiveEventStatusUpdate", (data) => {
                    console.log("Event status update via SignalR:", data);
                    // Optionally show a toast notification or update UI
                    // You can add notification toast here if needed
                });

                notificationConnection.start()
                    .then(() => {
                        console.log("Connected to NotificationHub successfully");
                        // Join user-specific group if needed (use Email as identifier)
                        // notificationConnection.invoke("JoinUserGroup", "@user.Email");
                    })
                    .catch(err => console.error("NotificationHub connection error:", err));
            });
            </text>
        }
    </script>
</body>
</html>
