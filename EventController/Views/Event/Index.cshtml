@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Event Detail</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        .event-card {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1.5rem;
        }

        .event-title {
            font-size: 1.5rem;
            font-weight: 600;
        }

        .event-meta {
            font-size: .9rem;
            color: #6c757d;
        }

        .price {
            font-size: 1.1rem;
            font-weight: 600;
            color: #212529;
        }

        .guide-icon {
            font-size: 1.25rem;
            margin-right: .35rem;
        }

        .social-icons i {
            font-size: 1.25rem;
            margin-right: .85rem;
            color: #495057;
        }

        .section-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: .6rem;
        }
    </style>
</head>
<body>

    <div class="container my-5">

        <!-- ========== TOP CARD ========== -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="row g-0">
                <!-- Event Image -->
                <div class="col-md-4">
                    <img src="https://via.placeholder.com/250x300"
                         class="img-fluid rounded-start w-100 h-100 object-fit-cover"
                         alt="Event Poster">
                </div>

                <!-- Event Info -->
                <div class="col-md-8">
                    <div class="card-body d-flex flex-column h-100 justify-content-between">

                        <!-- Header: Event Name + Share -->
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h5 class="event-title mb-1">@ViewBag.Event.Title</h5>
                                <p class="fst-italic text-muted mb-0">Artist</p>
                                <p class="event-meta">@ViewBag.Event.Title • @ViewBag.Event.Category.CategoryName</p>
                            </div>
                            <button class="btn btn-sm btn-light">
                                <i class="bi bi-share"></i>
                            </button>
                        </div>

                        <!-- Info -->
                        <div class="mt-3">
                            <p class="mb-1"><strong>Date:</strong> @ViewBag.Event.StartTime</p>
                            <p class="mb-1"><strong>Location:</strong> @ViewBag.Event.Venue.Address</p>
                            <p class="price mb-2">Price: @ViewBag.Event.Price</p>
                        </div>

                        <!-- CTA -->
                        <div class="mt-auto">
                            <a class="btn btn-warning fw-semibold px-4" href="#">Book</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- ========== ABOUT ========== -->
        <section class="my-4">
            <h5 class="section-title">About</h5>
            <p>
                @ViewBag.Event.Description
            </p>
        </section>

        <!-- ========== GUIDE • VENUE • T&C ========== -->
        <div class="row g-4">
            <!-- Event guide -->
            <div class="col-md-4">
                <div class="bg-light rounded p-3 h-100">
                    <h6 class="section-title">Event Guide</h6>
                    <p><i class="bi bi-person-fill guide-icon"></i>Max Attendee: @ViewBag.Event.MaxAttendees</p>
                    <p><i class="bi bi-translate guide-icon"></i>End time: @ViewBag.Event.EndTime</p>
                </div>
            </div>

            <!-- Venue -->
            <div class="col-md-4">
                <div class="bg-light rounded p-3 h-100">
                    <h6 class="section-title">Venue</h6>
                    <p class="mb-1"><strong>Location:</strong> @ViewBag.Event.Venue.Name</p>
                    <p class="mb-1">Address: @ViewBag.Event.Venue.Address</p>
                    <p class="mb-1">Capacity: @ViewBag.Event.Venue.Capacity</p>
                    <p class="mb-1">Start Time: @ViewBag.Event.StartTime</p>
                    <p class="mb-0">End Time: @ViewBag.Event.EndTime</p>
                </div>
            </div>

            <!-- Terms -->
            <div class="col-md-4">
                <div class="bg-light rounded p-3 h-100">
                    <h6 class="section-title">Terms & Conditions</h6>
                    <ul class="small mb-0 ps-3">
                        <li>No refunds on purchased tickets, even if rescheduled.</li>
                        <li>Security procedures (including frisking) remain management’s right.</li>
                        <li>Sponsors/organizers aren’t responsible for injury or damage.</li>
                    </ul>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
