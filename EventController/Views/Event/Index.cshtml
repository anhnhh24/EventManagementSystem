@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Event Detail</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        .event-title {
            font-size: 2rem;
            font-weight: 600;
        }

        .event-meta {
            color: #6c757d;
            font-size: 0.95rem;
        }

        .price {
            font-size: 1.25rem;
            font-weight: 600;
            color: #212529;
        }

        .info-label {
            font-weight: 500;
        }

        .section-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .card-img {
            object-fit: cover;
            height: 100%;
            border-top-left-radius: 0.5rem;
            border-bottom-left-radius: 0.5rem;
        }

        .rounded-section {
            background-color: #f8f9fa;
            padding: 1.25rem;
            border-radius: 0.75rem;
        }

        .btn-warning {
            font-weight: 600;
        }
    </style>
</head>
<body>

    <div class="container my-5">
        <!-- Event Header Card -->
        <div class="card shadow border-0 mb-4">
            <div class="row g-0">
                <!-- Image -->
                <div class="col-md-4">
                    <img src="~/@ViewBag.Event.ImageUrl" class="img-fluid card-img w-100" alt="Event Image" />
                </div>

                <!-- Info -->
                <div class="col-md-8">
                    <div class="card-body d-flex flex-column h-100 justify-content-between">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h2 class="event-title mb-1">@ViewBag.Event.Title</h2>
                                <p class="text-muted mb-1">Artist / Performer</p>
                                <p class="event-meta">@ViewBag.Event.Category.CategoryName</p>
                            </div>
                            <button class="btn btn-sm btn-outline-secondary mt-1"><i class="bi bi-share"></i></button>
                        </div>

                        <div class="mt-3">
                            <p class="mb-1"><span class="info-label">📅 Date:</span> @ViewBag.Event.StartTime.ToString("MMM dd, yyyy")</p>
                            <p class="mb-1"><span class="info-label">📍 Location:</span> @ViewBag.Event.Venue.Address</p>
                            <p class="price mb-3">💵 @ViewBag.Event.Price.ToString("N0") VND</p>
                        </div>

                        <div>
                            <form asp-controller="Registration" asp-action="Register" method="post">
                                <input type="hidden" name="eventId" value="@ViewBag.Event.EventID" />
                                <button class="btn btn-warning w-100" type="submit">Book Ticket</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- About -->
        <section class="mb-5">
            <h5 class="section-title">About the Event</h5>
            <p>@ViewBag.Event.Description</p>
        </section>

        <!-- Info Cards -->
        <div class="row g-4">
            <!-- Guide -->
            <div class="col-md-4">
                <div class="rounded-section h-100">
                    <h6 class="section-title">🎟 Event Guide</h6>
                    <p><i class="bi bi-people-fill me-2"></i><strong>Max Attendees:</strong> @ViewBag.Event.MaxAttendees</p>
                    <p><i class="bi bi-clock-fill me-2"></i><strong>End Time:</strong> @ViewBag.Event.EndTime.ToString("HH:mm")</p>
                </div>
            </div>

            <!-- Venue -->
            <div class="col-md-4">
                <div class="rounded-section h-100">
                    <h6 class="section-title">📍 Venue Details</h6>
                    <p><strong>Name:</strong> @ViewBag.Event.Venue.Name</p>
                    <p><strong>Address:</strong> @ViewBag.Event.Venue.Address</p>
                    <p><strong>Capacity:</strong> @ViewBag.Event.Venue.Capacity</p>
                    <p><strong>Start:</strong> @ViewBag.Event.StartTime.ToString("HH:mm")</p>
                    <p><strong>End:</strong> @ViewBag.Event.EndTime.ToString("HH:mm")</p>
                </div>
            </div>

            <!-- T&C -->
            <div class="col-md-4">
                <div class="rounded-section h-100">
                    <h6 class="section-title">📜 Terms & Conditions</h6>
                    <ul class="small ps-3 mb-0">
                        <li>No refunds for rescheduled events.</li>
                        <li>Security checks may apply.</li>
                        <li>Organizers not liable for injury/damage.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
